
<div class = "container">
  <div class = "row">
    <!--Filler row--> <br/>
  </div>

  <div class = "row justify-content-center">
    <h1>Eat Burgers</h1>
  </div>

  <div class = "row">
    <!--Filler row--> <br/>
  </div>

  <div class = "row justify-content-center">
    <h4>Add a Burger  &nbsp;</h4>
    <form class="create-form">

      <div class="form-group" action = "/" method = "POST">
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit">Submit</button>
    </form>
  </div>

   <div class = "row">
    <!--Filler row--> <br/>
  </div>

  <div class = "row justify-content-center">
  
    <div class = "col-lg-6">
      <table>
        <tbody>
          {{#each burgers}}
            {{#unless devoured}}
              <tr>
                <td>{{burger_name}}</td>
                <td><button class = "eat" val = "{{id}}">Eat</button></td>
              </tr>
            {{/unless}}
          {{/each}}
        </tbody>
      </table>
     
    </div>  

    <div class = "col-lg-6">
      <table>
        <tbody>
          {{#each burgers}}
            {{#if devoured}}
              <tr>
                <td>{{burger_name}}</td>
                <td><button class = "eat" val = "{{id}}">Eat</button></td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
     
    </div>  

  </div>

</div>
